{
	"name": "tttv",
	"productName": "天天TV",
	"productFileName": "tttv",
	"version": "0.1.2",
	"description": "天天TV，一款可以集在线看视频、下载视频、投影本地视频到电视、远程下载视频于一体的视频软件——看视频更随意",
	"main": "main.js",
	"author": "天天TV",
	"build": {
		"appId": "com.focusbe.tttv",
		"asar": true,
		"publish": [
			{
				"provider": "github",
				"repo": "TTTV",
				"owner": "focusbe",
				"protocol": "https",
				"token": "9d6f0554d880238a35b71a40c9bb129618070ff6"
			}
		],
		"asarUnpack": [
			"./lib/**/*",
			"./plugins/**/*"
		],
		"mac": {
			"category": "your.app.category.type",
			"icon": "assets/app",
			"target": [
				"zip",
				"dmg"
			]
		},
		"win": {
			"target": "nsis",
			"icon": "assets/app"
		},
		"squirrelWindows": {
			"iconUrl": "http://tttv.focusbe.com/app.ico"
		},
		"files": {
			"filter": [
				"**/*",
				"!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,tests,powered-test,example,examples,*.d.ts}",
				"!**/node_modules/.bin",
				"!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
				"!**/._*",
				"!.editorconfig",
				"!package.json",
				"!webpack.config.js",
				"!package-lock.json",
				"!src/*",
				"!output/*",
				"!assets/*"
			]
		},
		"directories": {
			"output": "output"
		}
	},
	"scripts": {
		"dev": "webpack-dev-server --progress --colors --content-base build",
		"dist": "set NODE_ENV=production&& webpack --progress --hide-modules",
		"dist-mac": "export NODE_ENV=production&& webpack --progress --hide-modules",
		"electron": "electron ./main.js",
		"rebuild": "electron-rebuild -f -w sqlite3",
		"packager": "electron-packager . FocusbeTv --platform=win32 --arch=x64  --out=./output --overwrite --app-version=0.0.1 --icon=./assets/app.icns  --asar=false --ignore=\"(src|docs|.gitignore|LICENSE|README.md|webpack.config.js|node_modules)\"",
		"packagermac": "npm run dist-mac && electron-packager . FocusbeTv --platform=darwin --arch=x64 --out=./output --overwrite --app-version=0.0.1 --asar=false --icon=./assets/app.icns --ignore=\"(src|docs|.gitignore|LICENSE|README.md|webpack.config.js|node_modules)\"",
		"packwin": "npm run dist && electron-builder --x64 --publish always",
		"packmac": "npm run dist-mac && electron-builder --publish always"
	},
	"license": "ISC",
	"devDependencies": {
		"copy-webpack-plugin": "^4.5.1",
		"css-loader": "^0.23.1",
		"electron": "^2.0.0",
		"electron-builder": "^19.52.1",
		"electron-builder-squirrel-windows": "^19.52.0",
		"electron-osx-sign": "^0.4.8",
		"electron-rebuild": "^1.7.3",
		"extract-text-webpack-plugin": "^2.1.2",
		"file-loader": "^0.11.1",
		"html-loader": "^0.4.5",
		"html-webpack-plugin": "^2.28.0",
		"iconv-lite": "^0.4.23",
		"image-webpack-loader": "^3.3.1",
		"jquery": "^3.2.1",
		"less": "^2.7.2",
		"less-loader": "^4.0.5",
		"material-design-icons": "^3.0.1",
		"muse-ui": "^2.1.0",
		"node-sass": "^4.7.2",
		"postcss-loader": "^0.9.1",
		"sass-loader": "^6.0.6",
		"socket.io": "^2.1.1",
		"style-loader": "^0.13.1",
		"url-loader": "^0.5.8",
		"vue": "^2.3.4",
		"vue-loader": "^12.2.1",
		"vue-router": "^2.6.0",
		"vue-style-loader": "^3.0.3",
		"vue-template-compiler": "^2.3.4",
		"vuex": "^2.3.1",
		"webpack": "^2.1.0-beta.25",
		"webpack-dev-middleware": "^1.10.1",
		"webpack-dev-server": "^2.1.0-beta.0",
		"webpack-hot-middleware": "^2.18.0"
	},
	"dependencies": {
		"aria2": "^3.0.0",
		"electron-updater": "^2.21.1",
		"ffi": "^2.2.0",
		"fluent-ffmpeg": "^2.1.2",
		"jsonfile": "^4.0.0",
		"lodash-id": "^0.14.0",
		"lowdb": "^1.0.0",
		"nodecast-js": "^1.0.3",
		"shelljs": "^0.8.1"
	}
}
